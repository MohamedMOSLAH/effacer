        $('.userOffres_carouselWrap').addClass('userOffres_carouselWrap--visible');
    });

    $('.userOffres_carouselBackground, .userOffres_carousel_close').on('click', (e) => {
        $('.userOffres_carouselWrap').removeClass('userOffres_carouselWrap--visible');
    });

