        e.preventDefault();
        let stateAttr = $(this).attr('data-state') ? parseInt($(this).attr('data-state')) : 0;
        let newState = stateAttr === 2 ? 0 : stateAttr + 1;
        $(this).attr('data-state', newState);
    });
    

